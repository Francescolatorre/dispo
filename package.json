{
  "name": "dispo-mvp",
  "version": "1.0.0",
  "description": "Resource planning MVP",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "client": "cd client && npm run dev",
    "server": "nodemon src/server.js",
    "setup:db": "node src/db/setup-test-db.js",
    "dev:all": "concurrently \"npm run server\" \"npm run client\"",
    "monitor:files": "node scripts/monitor-files.js",
    "verify:files": "node scripts/verify-critical-files.js",
    "restore:files": "node scripts/restore-files.js",
    "dev:safe": "concurrently \"npm run monitor:files\" \"npm run dev:all\"",
    "files:check": "npm run verify:files || npm run restore:files",
    "files:monitor": "npm run monitor:files",
    "files:restore": "npm run restore:files"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.2.2",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "rimraf": "^5.0.5",
    "glob": "^10.3.10",
    "typescript": "^5.2.2",
    "vitest": "^1.2.2"
  }
}
